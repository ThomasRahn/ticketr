<div clas="container-fluid">
  <div class="row justify-content-md-center">
    <div class="col col-lg-2">
      <h1>Tickets</h1>
    </div>
  </div>

  <% @tickets.each do |ticket| %>
    <div class="row justify-content-md-center">
      <div class="col col-lg-6">
        <h2><%= ticket.task %></h2>
        <hr/>
        <p>
          <%= ticket.description %>
        </p>
      </div>
    </div>
  <% end %>
</div>

